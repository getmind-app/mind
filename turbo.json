{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": ["**/.env"],
    "pipeline": {
        "db:generate": {
            "inputs": ["prisma/schema.prisma"],
            "cache": false
        },
        "db:push": {
            "inputs": ["prisma/schema.prisma"],
            "cache": false
        },
        "dev:ios": {
            "persistent": true,
            "cache": false
        },
        "dev:android": {
            "persistent": true,
            "cache": false
        },
        "build": {
            "dependsOn": ["^build", "^db:generate"],
            "outputs": [".next/**", ".expo/**"]
        },
        "lint": {},
        "lint:fix": {},
        "clean": {
            "cache": false
        },
        "//#clean": {
            "cache": false
        },
        "type-check": {
            "dependsOn": ["^db:generate"],
            "cache": false
        }
    },
    "globalEnv": [
        "CI",
        "DATABASE_URL",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "EXPO_ROUTER_APP_ROOT",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NODE_ENV",
        "SKIP_ENV_VALIDATION",
        "VERCEL",
        "VERCEL_URL",
        "FIXED_APPLICATION_FEE",
        "SCHEDULE_USER_ID",
        "RESEND_SECRET_KEY"
    ]
}
