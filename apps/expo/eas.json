{
    "cli": {
        "version": ">= 3.3.0"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "ios": {
                "resourceClass": "m-medium"
            },
            "env": {
                "REACT_NATIVE_NODE_MODULES_DIR": "../../../node_modules"
            },
            "android": {
                "buildType": "apk"
            }
        },
        "preview": {
            "distribution": "internal",
            "ios": {
                "simulator": true,
                "resourceClass": "m-medium"
            },
            "env": {
                "REACT_NATIVE_NODE_MODULES_DIR": "../../../node_modules"
            }
        },
        "production": {
            "distribution": "store",
            "ios": {
                "resourceClass": "m-medium"
            },
            "env": {
                "REACT_NATIVE_NODE_MODULES_DIR": "../../../node_modules"
            }
        }
    },
    "submit": {
        "production": {
            "ios": {
                "appleId": "gustavo_fior@outlook.com", // should use dev@getmind.app?
                "ascAppId": "6467673373",
                "appleTeamId": "4LA8VSXPQZ",
                "sku": "app.getmind.mind",
                "language": "pt-BR"
            }
        }
    }
}
